[mysql]

# CLIENT #
port                           = 3306
socket                         = /run/mysqld/mysqld.sock
safe-updates

[mysqld]
character-set-server=utf8mb4
bind-address = 0.0.0.0
datadir=/opt/mysql
default-storage-engine         = InnoDB
socket                         = /run/mysqld/mysqld.sock
pid-file                       = /var/lib/mysql/mysql.pid


[client]
default_character_set = utf8mb4